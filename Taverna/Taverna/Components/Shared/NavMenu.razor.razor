.dropdown-menu[data-bs-popper] {
    width: 100%;
    top: 100%;
    left: 0;
    background-image: linear-gradient(-78deg, var(--jujuba-main-color) 0%, var(--drumon-main-color) 65%);
    background-color: white;
    font-size: 18px !important;
}

.navbar-nav .nav-link.active, .navbar-nav .nav-link.show {
    color: white !important;
    background-color: rgba(255,255,255,0.1);
}

.clube-main-navbar .navbar-brand span {
    color: white;
}

.clube-main-navbar {
    background: transparent;
}

.dropdown-menu > li{
    font-size: 18px !important;
}

.navbar-toggler {
    background-color: rgba(255, 255, 255, 0.1);
}

.top-row {
    height: 3.5rem;
    background-color: rgba(0,0,0,0.4);
}

.navbar-brand {
    font-size: 1.1rem;
}

.nav-item a {
    color: #d7d7d7;
    height: 3rem;
    display: flex;
    align-items: center;
    font-size: 28px;
}

.nav-item ::deep a {
    color: #fff;
    height: 3rem;
    display: flex;
    align-items: center;
    line-height: 2.2rem;
    font-size: 22px;
}

.nav-item ::deep a.active {
    color: white;
}

.nav-item ::deep a:hover {
    background-color: rgba(255,255,255,0.1);
    color: white;
}

@media (min-width: 641px) {
    .navbar-toggler {
        display: none;
    }

    .collapse {
        /* Never collapse the sidebar for wide screens */
        display: block;
    }

    .nav-scrollable {
        /* Allow sidebar to scroll for tall menus */
        height: calc(100vh - 3.5rem);
        overflow-y: auto;
    }
}